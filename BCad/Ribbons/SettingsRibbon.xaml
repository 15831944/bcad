<r:RibbonTab x:Class="BCad.Ribbons.SettingsRibbon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:r="clr-namespace:Microsoft.Windows.Controls.Ribbon;assembly=RibbonControlsLibrary"
             xmlns:local="clr-namespace:BCad.Ribbons"
             Header="Settings"
             x:Name="theRibbon"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <r:RibbonTab.Resources>
        <local:ColorConverter x:Key="colorConverter" />

        <DataTemplate x:Key="ColorTemplate">
            <Rectangle Margin="1" Width="45" Height="25" Stroke="Black">
                <Rectangle.Fill>
                    <SolidColorBrush x:Name="unused" Color="{Binding Converter={StaticResource colorConverter}}" />
                </Rectangle.Fill>
            </Rectangle>
        </DataTemplate>
    </r:RibbonTab.Resources>
    <r:RibbonGroup Header="Debug">
        <ComboBox ItemsSource="{Binding ElementName=theRibbon, Path=BackgroundColors}"
                  ItemTemplate="{StaticResource ColorTemplate}"
                  SelectedItem="{Binding Path=BackgroundColor, Mode=TwoWay}" />
    </r:RibbonGroup>
</r:RibbonTab>
