<Window x:Class="BCad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BCad" Height="600" Width="800"
        FocusManager.FocusedElement="{Binding ElementName=inputPanel}"
        Loaded="MainWindowLoaded" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <ComboBox Name="currentLayer" Width="250" />
        </Grid>
        <UserControl Grid.Row="1" Name="viewPanel" />
        <UserControl Grid.Row="2" Name="inputPanel" Height="100" />
    </Grid>
</Window>
