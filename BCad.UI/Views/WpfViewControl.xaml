<ui:ViewControl x:Class="BCad.UI.Views.WpfViewControl"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:ui="clr-namespace:BCad.UI;assembly=BCad.Core"
                mc:Ignorable="d"
                d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Canvas Name="objects" Background="Black" />
        <Canvas Name="rubber" Background="Transparent" />
        <Canvas Name="snap" Background="Transparent" />
        <Canvas Name="clicker" Background="White" Opacity="0.001" PreviewMouseDown="Canvas_MouseDown" PreviewMouseMove="canvas_MouseMove" PreviewMouseUp="canvas_MouseUp" PreviewMouseWheel="canvas_MouseWheel" />
        <!--
        <Grid Grid.Row="1">
            <Label HorizontalAlignment="Left" VerticalAlignment="Top" Name="coords">0, 0, 0</Label>
        </Grid>
        -->
    </Grid>
</ui:ViewControl>
