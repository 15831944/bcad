<ui:ViewControl x:Class="BCad.UI.Views.SlimDXViewControl"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:i="clr-namespace:System.Windows.Interop;assembly=PresentationCore"
                xmlns:ui="clr-namespace:BCad.UI;assembly=BCad.Core"
                mc:Ignorable="d"
                d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Image Name="mainImage">
            <Image.Source>
                <i:D3DImage x:Name="d3dimage" />
            </Image.Source>
        </Image>
        <Canvas Name="snapLayer" Background="Transparent" ClipToBounds="True" />
        <Canvas Name="clicker" Background="White" Opacity="0.001"
                MouseDown="clicker_MouseDown"
                MouseUp="clicker_MouseUp"
                MouseMove="clicker_PreviewMouseMove" />
    </Grid>
</ui:ViewControl>
